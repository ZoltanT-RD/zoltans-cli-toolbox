{
  //-------- Code Spell Checker Configuration --------
  // Docs: https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker
  // The Language local to use when spell checking. "en", "en-US" and "en-GB" are currently supported by default.
  "cSpell.language": "en-GB",

  // Controls the maximum number of spelling errors per document.
  // "cSpell.maxNumberOfProblems": 100,

  // Controls the number of suggestions shown.
  // "cSpell.numSuggestions": 8,

  // The minimum length of a word before checking it against a dictionary.
  // "cSpell.minWordLength": 4,

  // Specify file types to spell check.
  // "cSpell.enabledLanguageIds": [
  //   "csharp",
  //   "go",
  //   "javascript",
  //   "javascriptreact",
  //   "markdown",
  //   "php",
  //   "plaintext",
  //   "typescript",
  //   "typescriptreact",
  //   "yml"
  // ],

  // Enable / Disable the spell checker.
  "cSpell.enabled": true,

  // Display the spell checker status on the status bar.
  // Should only be in the user settings.
  // "cSpell.showStatus": true,

  // Words to add to dictionary for a workspace.
  "cSpell.words": [
    "Automock",
    "borderless",
    "colors",
    "datepicker",
    "devserver",
    "dishcult",
    "Eisley",
    "Freshdesk",
    "geometricpanda",
    "istoday",
    "mixins",
    "msbuildtasks",
    "noreferrer",
    "onetrust",
    "prettierrc",
    "Resdiary",
    "RESDIARYPORTAL",
    "resx",
    "sass",
    "searchbar",
    "Sidetab",
    "svgson",
    "testid",
    "tfvars",
    "timeslot",
    "timeslots",
    "Tompa",
    "typeform",
    "webp",
    "wireframe"
  ],

  // Enable / Disable compound words like 'errormessage'
  "cSpell.allowCompoundWords": false,

  // Words to be ignored and not suggested.
  "cSpell.ignoreWords": ["behaviour"],

  // User words to add to dictionary.  Should only be in the user settings.
  // "cSpell.userWords": [],

  // Specify paths/files to ignore.
  // "cSpell.ignorePaths": [
  //     "node_modules",        // this will ignore anything the node_modules directory
  //     "**/node_modules",     // the same for this one
  //     "**/node_modules/**",  // the same for this one
  //     "node_modules/**",     // Doesn't currently work due to how the current working directory is determined.
  //     "vscode-extension",    //
  //     ".git",                // Ignore the .git directory
  //     "*.dll",               // Ignore all .dll files.
  //     "**/*.dll",             // Ignore all .dll files
  // ],

  // flagWords - list of words to be always considered incorrect
  // This is useful for offensive words and common spelling errors.
  // For example "hte" should be "the"`
  "cSpell.flagWords": ["hte"],

  // Set the delay before spell checking the document. Default is 50.
  // Should only be in the user settings.
  // "cSpell.spellCheckDelayMs": 50,

  "editor.formatOnSave": true,
  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.filtering.scopes": [],
  "todo-tree.general.tagGroups": {
    "// todo": ["TODO", "// todo"],
    "// note": ["NOTE", "// note", "@privateRemarks", "@remarks"],
    "// info": ["INFO", "// info", "@inheritDoc", "@example"],
    "// ref": ["REF", "// ref", "@link", "@see"],
    "// experimental": ["EXPERIMENTAL", "// experimental", "@alpha", "@beta", "@experimental"],
    "// deprecated": ["DEPRICATED", "// deprecated", "@deprecated"],
    "// section": ["SECTION", "// section", "#region", "#endregion"],
    "// fixme": ["FIXME", "// fixme"],
    "// change": ["CHANGE", "// change"]
  },
  "todo-tree.general.tags": [
    "// todo",
    "// fixme",
    "// note",
    "TODO",
    "FIXME",
    "NOTE",
    "@privateRemarks",
    "@remarks",
    "// info",
    "INFO",
    "@inheritDoc",
    "@example",
    "// ref",
    "REF",
    "@link",
    "@see",
    "EXPERIMENTAL",
    "// experimental",
    "@alpha",
    "@beta",
    "@experimental",
    "// deprecated",
    "DEPRECATED",
    "@deprecated",
    "// section",
    "SECTION",
    "#region",
    "#endregion",
    "// optional",
    "OPTIONAL",
    "// change",
    "CHANGE"
  ]
}